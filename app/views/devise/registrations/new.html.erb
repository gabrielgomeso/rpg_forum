<div class="sign-up">
  <div class="left-block">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "register-form"}) do |f| %>
      <h2 class="welcome-title">Junte-se a um mundo de aventuras!</h2>
      <p class="welcome-description">Derrote monstros aterradores, dispute duelos honrosos e torne-se um grande desbravador!</p>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail' %>
      </div>

      <div class="field">
        <%= f.label :senha %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Senha' %>
      </div>

      <div class="field">
        <%= f.label :confirmação_de_senha %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmação de senha' %>
      </div>

      <div class="actions">
        <%= f.submit "Registrar", :class => "submit-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="right-block">
  </div>
</div>

